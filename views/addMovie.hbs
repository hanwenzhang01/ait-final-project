<!DOCTYPE html>
<html>
    <head>
        <h1>add a movie to ur shelf:</h1>
    </head>

    <body>
        <script type="module" >
            import { Validator, enLang as en } from '/@upjs/facile-validator';
        </script>
        <script type="module" src="/main.js"></script>
        <form action="" method="POST">
            <h4>title:</h4>
            <input 
                type="text"
                name="title" 
                placeholder="title"
                data-rules="required"/>
            <br>
            
            <h4>year:</h4>
            <input
                name="year"
                placeholder="release year"
                data-rules="int|between:1888,2023|required"/>
            <br>

            <h4>review, in stars:</h4>
                <select name="stars">
                    <option value=""></option>
                    <option value="★★★★★">★★★★★</option>
                    <option value="★★★★">★★★★</option>
                    <option value="★★★">★★★</option>
                    <option value="★★">★★</option>
                    <option value="★">★</option>
                </select>
            <br>

            <h4>review, in words:</h4>
            <textarea 
                name="review" 
                placeholder="ur review">
            </textarea>
            <br>

            <h4>maturity rating:</h4>
            <select name="rating">
                <option value=""></option>
                <option value="G">G: general audiences</option>
                <option value="PG">PG: parental guidance suggested</option>
                <option value="PG-13">PG-13: parents strongly cautioned</option>
                <option value="R">R: restricted</option>
                <option value="NC-17">NC-17: clearly adult</option>
                <option value="NR">NR: not rated</option>
            </select>
            <br>

            <h4>genre:</h4>
            <input
                type="text"
                name="genre"
                placeholder="genre"/>
            <br>
            <br>
            <input type="submit" value="submit" />
        </form>
    </body>
</html>