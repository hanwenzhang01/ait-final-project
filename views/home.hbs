            </ul>
	    </nav>
        <script>
            feather.replace();
        </script>
    </header>

    <div class="media">
        <div class="tables">
            <h2>books</h2>
            <table>
                <tr>
                    <th>author</th>
                    <th>title</th>
                    <th>stars</th>
                    <th>year</th>
                    <th>genre</th>
                    <th>review</th>
                </tr>
                {{#each books as |book|}}
                <tr>
                    <td>{{book.author}}</td>
                    <td>{{book.title}}</td>
                    {{#if book.stars}}
                        <td>{{book.stars}}</td>
                    {{else}}
                        <td></td>
                    {{/if}}
                    {{#if book.year}}
                        <td>{{book.year}}</td>
                    {{else}}
                        <td></td>
                    {{/if}}
                    {{#if book.genre}}
                        <td>{{book.genre}}</td>
                    {{else}}
                        <td></td>
                    {{/if}}
                    {{#if book.review}}
                        <td>{{book.review}}</td>
                    {{else}}
                        <td></td>
                    {{/if}}
                </tr>
                {{/each}}
            </table>
        </div>

        <div class="tables">
            <h2>movies</h2>
            <table>
                <tr>
                    <th>title</th>
                    <th>year</th>
                    <th>stars</th>
                    <th>rating</th>
                    <th>genre</th>
                    <th>review</th>
                </tr>
                {{#each movies as |movie|}}
                <tr>
                    <td>{{movie.title}}</td>
