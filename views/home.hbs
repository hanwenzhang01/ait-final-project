<!DOCTYPE html>
<html>
    <h1>books</h1>
    <table>
        <tr>
            <th>author</th>
            <th>title</th>
            <th>review</th>
            <th>stars</th>
            <th>year</th>
            <th>genre</th>
        </tr>
        {{#each books as |book|}}
        <tr>
            <td>{{book.author}}</td>
            <td>{{book.title}}</td>
            {{#if book.review}}
                <td>{{book.review}}</td>
            {{else}}
                <td></td>
            {{/if}}
            {{#if book.stars}}
                <td>{{book.stars}}</td>
            {{else}}
                <td></td>
            {{/if}}
            {{#if book.year}}
                <td>{{book.year}}</td>
            {{else}}
                <td></td>
            {{/if}}
            {{#if book.genre}}
                <td>{{book.genre}}</td>
            {{else}}
                <td></td>
            {{/if}}
        </tr>
        {{/each}}
    </table>

    <h1>movies</h1>
    <table>
        <tr>
            <th>title</th>
            <th>year</th>
            <th>review</th>
            <th>stars</th>
