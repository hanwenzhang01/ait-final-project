                    {{else}}
                        <td></td>
                    {{/if}}
                    {{#if album.review}}
                        <td>{{album.review}}</td>
                    {{else}}
                        <td></td>
                    {{/if}}
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
