                    {{/if}}
                    {{#if movie.genre}}
                        <td>{{movie.genre}}</td>
                    {{else}}
                        <td></td>
                    {{/if}}
                    {{#if movie.review}}
                        <td>{{movie.review}}</td>
                    {{else}}
                        <td></td>
                    {{/if}}
                </tr>
                {{/each}}
            </table>
        </div>

        <div class="tables">
            <h2>albums</h2>
            <table>
                <tr>
                    <th>title</th>
                    <th>artist</th>
                    <th>stars</th>
                    <th>year</th>
                    <th>genre</th>
                    <th>review</th>
                </tr>
                {{#each albums as |album|}}
                <tr>
                    <td>{{album.title}}</td>
                    <td>{{album.artist}}</td>
                    {{#if album.stars}}
                        <td>{{album.stars}}</td>
                    {{else}}
