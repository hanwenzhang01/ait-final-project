            {{else}}
                <td></td>
            {{/if}}
            {{#if movie.rating}}
                <td>{{movie.rating}}</td>
            {{else}}
                <td></td>
            {{/if}}
            {{#if movie.genre}}
                <td>{{movie.genre}}</td>
            {{else}}
                <td></td>
            {{/if}}
        </tr>
        {{/each}}
    </table>

    <h1>albums</h1>
    <table>
        <tr>
            <th>title</th>
            <th>artist</th>
            <th>review</th>
            <th>stars</th>
            <th>year</th>
            <th>genre</th>
        </tr>
        {{#each albums as |album|}}
        <tr>
            <td>{{album.title}}</td>
            <td>{{album.artist}}</td>
            {{#if album.stars}}
                <td>album.stars</td>
            {{else}}
